<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">配料表识别结果</view>
</cu-custom>
<view class="cu-bar bg-white search fixed" style="top:{{ CustomBar }}px;">
  <view class="search-form round">
    <text class="cuIcon-search"></text>
    <input type="text" placeholder="请输入需要查看详情的成分名称" bindinput="getIndex" confirm-type="search" ></input>
  </view>
  <view class="action">
    <button class="cu-btn bg-gradual-blue shadow-blur round" bindtap="searchDetail">搜索详情</button>
  </view>
</view>
<view class="table bg-white" style="margin-top:{{ CustomBar }}px;">
  <view class="tr bg-w">
    <view class="th th-name">成分名称</view>
    <view class="th th-type">成分类型</view>
    <view class="th th-level">健康程度</view>
    <view class="th th-risk">风险</view>
  </view>
  <block wx:for="{{ resList }}" wx:key="{{ item.code }}">
    <view class="tr bg-g" wx:if="{{ index % 2 == 0 }}">
      <view class="td td-name" data-index="{{ item.index }}" bindtap="goToDetail">{{ item.name }}</view>
      <view class="td td-type">{{ item.type }}</view>
      <view class="td td-level">{{ item.level }}</view>
      <view class="td td-risk" wx:if="{{item.risk !== null}}">{{ item.risk }}</view>
      <view class="td td-risk" wx:else>无</view>
    </view> 
    <view class="tr bg-white" wx:else>
      <view class="td td-name">{{ item.name }}</view>
      <view class="td td-type">{{ item.type }}</view>
      <view class="td td-level">{{ item.level }}</view>
      <view class="td td-risk" wx:if="{{item.risk !== null}}">{{ item.risk }}</view>
      <view class="td td-risk" wx:else>无</view>
    </view>
  </block>
</view>